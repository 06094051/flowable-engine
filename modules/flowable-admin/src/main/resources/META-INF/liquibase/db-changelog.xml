<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1" author="flowable">

		<createTable tableName="ACT_ADM_USER_INFO">
			<column name="login" type="varchar(50)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="password" type="varchar(100)" />
			<column name="first_name" type="varchar(50)" />
			<column name="last_name" type="varchar(50)" />
			<column name="email" type="varchar(100)" />
		</createTable>

		<createTable tableName="ACT_ADM_AUTHORITY">
			<column name="name" type="varchar(255)">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>

		<createTable tableName="ACT_ADM_USER_AUTHORITY">
			<column name="login" type="varchar(50)" />
			<column name="name" type="varchar(255)" />
		</createTable>

		<createIndex indexName="idx_user_authority" tableName="ACT_ADM_USER_AUTHORITY" unique="true">
			<column name="login" type="varchar(50)" />
			<column name="name" type="varchar(255)" />
		</createIndex>

		<addForeignKeyConstraint baseColumnNames="name"
			baseTableName="ACT_ADM_USER_AUTHORITY" constraintName="fk_authority_name"
			referencedColumnNames="name" referencedTableName="ACT_ADM_AUTHORITY" />

		<addForeignKeyConstraint baseColumnNames="login"
			baseTableName="ACT_ADM_USER_AUTHORITY" constraintName="fk_user_login"
			referencedColumnNames="login" referencedTableName="ACT_ADM_USER_INFO" />

		<loadData encoding="UTF-8" file="META-INF/liquibase/users.csv"
			separator=";" tableName="ACT_ADM_USER_INFO" />

		<loadData encoding="UTF-8" file="META-INF/liquibase/authorities.csv"
			separator=";" tableName="ACT_ADM_AUTHORITY" />

		<loadData encoding="UTF-8" file="META-INF/liquibase/users_authorities.csv"
			separator=";" tableName="ACT_ADM_USER_AUTHORITY" />

        <createTable tableName="ACT_ADM_SERVER_CONFIG">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(50)" />
            <column name="description" type="varchar(255)" />
            <column name="server_address" type="varchar(100)" />
            <column name="port" type="integer" />
            <column name="context_root" type="varchar(100)" />
            <column name="rest_root" type="varchar(100)" />
            <column name="user_name" type="varchar(100)" />
            <column name="password" type="varchar(100)" />
            <column name="tenant_id" type="varchar(50)" />
        </createTable>

	</changeSet>

</databaseChangeLog>
